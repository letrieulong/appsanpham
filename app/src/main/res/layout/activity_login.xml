<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nen"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".object.Login">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="80dp"
            android:layout_width="match_parent">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="50dp"
                android:text="Đăng Nhập"
                android:textColor="#000000"
                android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="135dp"
            android:layout_width="match_parent">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:hintEnabled="true"
                app:hintTextColor="@color/black"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tài Khoản"
                    android:maxLength="25"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/personblack"
                    android:textSize="30dp"
                    android:background="@drawable/viewedt"
                    android:id="@+id/edtacount"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                app:hintTextColor="@color/black"
                app:counterMaxLength="20"
                app:passwordToggleEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mật Khẩu"
                    android:textSize="30dp"
                    android:textColorHint="@color/black"
                    android:id="@+id/edtpass"
                    android:inputType="textPassword"
                    app:counterEnabled="true"
                    android:maxLength="20"
                    android:drawableStart="@drawable/key"
                    android:drawablePadding="10dp"
                    android:background="@drawable/viewedt"/>
                <!--        app:passwordToggleEnabled="true" để hiển thị mật khẩu và ẩn -->
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/btnlogin"
            android:textSize="25dp"
            android:text="Đăng Nhập"
            android:background="@drawable/viewedt"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Bạn Chưa Có Tài Khoản !"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Đăng Ký"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>