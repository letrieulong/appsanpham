<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    tools:context=".object.Function">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txttitlt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thêm Sản Phẩm"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/choeseimg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/noimage" />

        <EditText
            android:background="@drawable/customedt"
            android:id="@+id/edttensp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/choeseimg"
            android:layout_marginTop="5dp"
            android:hint="Nhập Tên Sản Phâm" />

        <EditText
            android:id="@+id/edtpricesp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/choeseimg"
            android:layout_marginTop="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/customedt"
            android:hint="Nhập Giá Sản Phẩm"
            android:inputType="number"
            android:maxLength="15" />

        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:id="@+id/btnedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chỉnh Sửa"
                android:drawableLeft="@drawable/edit"
                android:textSize="20dp" />
            <Button
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:id="@+id/btnupdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:drawableLeft="@drawable/update"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>