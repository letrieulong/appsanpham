<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".object.Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="100dp">

        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Ký"
            android:textSize="50dp"
            android:textStyle="bold" />
    </LinearLayout>

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:src="@drawable/noimage"
                android:id="@+id/profile_image"
                android:layout_height="150dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Họ Tên : "
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <EditText
                        android:layout_marginLeft="105dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lê Triệu Long"
                        android:textSize="20dp"
                        android:maxLength="30"
                        android:id="@+id/edtfullname"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Tài Khoản : "
                        android:textColor="@color/black"
                        android:textSize="20dp" />


                    <EditText
                        android:id="@+id/edtacount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:hint="abc"
                        android:maxLength="20"
                        android:textSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Mật Khẩu : "
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <EditText
                        android:layout_marginLeft="85dp"
                        android:maxLength="20"
                        android:inputType="textPassword"
                        android:id="@+id/edtpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="123"
                        android:textSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txthoten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhập Lại Mật Khẩu : "
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <EditText
                        android:inputType="textPassword"
                        android:id="@+id/edtrepass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="123"
                        android:textSize="20dp" />
                </LinearLayout>
                <Button
                    android:id="@+id/btnregister"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/viewedt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đăng Ký"
                    android:textSize="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn Đã Có Tài Khoản !"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5801D5"
                    android:text="Đăng Nhập"
                    android:textStyle="bold"
                    android:id="@+id/txtformlogin"
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>

</RelativeLayout>